    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "circuit-cubes-debug",
            "cargo": {
                "args": [
                    "build", 
                    "--bin", "circuit-cubes",
                    "--manifest-path", "${workspaceFolder}/rust/Cargo.toml",
                ]
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "circuit-cubes-release",
            "cargo": {
                "args": [
                    "build",
                    "--release",
                    "--bin", "circuit-cubes",
                    "--manifest-path", "${workspaceFolder}/rust/Cargo.toml",
                ]
            }
        }    
    ]
}